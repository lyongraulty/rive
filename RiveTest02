<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Rive Animation</title>
  <script src="https://unpkg.com/@rive-app/canvas@latest"></script>
  <style>
    /* Reset margins and set up a full-viewport container */
    body {
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background-color: #ffffff;
    }
    /* Responsive wrapper that adapts to the iframeâ€™s width */
    .rive-wrapper {
      width: 100%;
      max-width: 2000px; /* Optional maximum width */
      display: flex;
      justify-content: center;
      align-items: center;
    }
    /* Inner container for centering the canvas */
    .rive-container {
      width: 100%;
      min-width: 600px;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    /* Canvas scales with its container */
    canvas {
      width: 100%;
      height: auto;
      display: block;
    }
  </style>
</head>
<body>
  <div class="rive-wrapper">
    <div class="rive-container">
      <canvas id="riveCanvas"></canvas>
    </div>
  </div>
  <script>
    // Function to resize the canvas for clarity
    function resizeCanvas() {
      const canvas = document.getElementById("riveCanvas");
      canvas.style.width = "100%";
      canvas.style.height = "auto";
      if (r) {
        r.resizeDrawingSurfaceToCanvas();
      }
    }

    // Initialize the Rive animation
    const r = new rive.Rive({
      src: "https://raw.githubusercontent.com/lyongraulty/Rive/main/Chroma_2.riv?raw=true",
      canvas: document.getElementById("riveCanvas"),
      autoplay: true,
      stateMachines: "State Machine 1",
      onLoad: () => {
        console.log("Rive animation loaded!");
        resizeCanvas();
        r.play();
      }
    });

    // Resize the canvas on window resize
    window.addEventListener("resize", resizeCanvas);
  </script>
</body>
</html>
